<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/backgroundPrimaryColor"
	android:clickable="true"
	android:focusable="true"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:padding="@dimen/activity_default_margin">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/plate_details_image"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:scaleType="fitCenter"
		app:placeholderImage="@drawable/splash_image" />

	<TextView
		android:id="@+id/plate_details_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="Pizza" />

	<TextView
		android:id="@+id/plate_details_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		tools:text="Pizza de calabresa" />

	<TextView
		android:id="@+id/plate_details_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="R$ 34,50" />

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/plate_details_add_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/activity_default_margin"
		android:text="@string/add_to_chart" />
</LinearLayout>