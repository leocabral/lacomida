<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?android:attr/selectableItemBackground"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:padding="@dimen/activity_default_margin">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/plate_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:scaleType="fitCenter"
		app:placeholderImage="@drawable/splash_image" />

	<TextView
		android:id="@+id/plate_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="Pizza" />

	<TextView
		android:id="@+id/plate_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		tools:text="Pizza de calabresa" />

	<TextView
		android:id="@+id/plate_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="R$ 34,50" />
</LinearLayout>